<Application
    x:Class="PlaidBrowserModern.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PlaidBrowserModern"
    xmlns:converters="using:PlaidBrowserModern.Converters"
    RequestedTheme="Light">
    
    <Application.Resources>
        <converters:StringFormatConverter x:Key="StringFormatConverter" />
        <converters:ValueToColorConverter x:Key="ValueToColorConverter" />
        <converters:EqualToVisibilityConverter x:Key="EqualToVisibilityConverter" />
    </Application.Resources>

</Application>
